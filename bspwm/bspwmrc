#! /bin/sh
## STARTUP ##

pulseaudio --start &
picom -b &
sxhkd &
dunst &
bspc monitor -d 1 2 3 4 5
$HOME/.config/polybar/launch.sh &

$HOME/.config/bspwm/scripts/wallpaper.sh &
pgrep -x sxhkd > /dev/null || sxhkd &
xsetroot -cursor_name left_ptr &
crow &
$HOME/.config/bspwm/scripts/updates.sh



bspc config border_width        2
bspc config window_gap          5

bspc config split_ratio           0.52
bspc config borderless_monocle    true
bspc config gapless_monocle       true
bspc config focus_follows_pointer true
bspc config pointer_modifier	  shift

#### BSPWM COLORING ####


bspc config normal_border_color         "#565b66"
bspc config active_border_color         "#73b8ff"
bspc config focused_border_color        "#73b8ff"
bspc config presel_feedback_color       "#73b8ff"
bspc config urgent_border_color         "#73b8ff"



## APPLICATION RULES ##
bspc rule -a Brave-browser desktop='^1' follow=on
bspc rule -a TelegramDesktop desktop='^3' state=floating rectangle=1014x485+6+0
bspc rule -a Slack            desktop='^3' state=floating rectangle=1014x550+6+485
bspc rule -a Pachca           desktop='^3' state=floating rectangle=888x750+1026+0
bspc rule -a matplotlib state=floating follow=on
bspc rule -a Viewnior rectangle=1350x900+285+90 state=floating follow=on
bspc rule -a Thunar state=floating follow=on
bspc rule -a crow-translate state=floating
bspc rule -a Google-chrome state=floating center=on rectangle=800x600+0+0
bspc rule -a Peek state=floating follow=on
